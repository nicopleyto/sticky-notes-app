<div class="card text-dark bg-warning row justify-content-center mx-auto" style="max-width: 20rem;">
  <h5 class ="card-header">Sign In</h5>
  <div class = "card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group my-1">
        <%= f.label :email , :class => "small"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>

      <div class="field form-group my-1">
        <%= f.label :password, :class => "small" %><br />
        <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-group my-1">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, :class => "small" %>
        </div>
      <% end %>

      <div class="actions d-flex justify-content-between mt-3 mb-1">
        <%= f.submit "Sign in", :class => "btn d-flex flex-fill justify-content-center align-items-center py-2 custom-hover" %>
      </div>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), :class => "card-link small link-dark remove-underline" %><br>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "card-link small link-dark remove-underline"%>
    <% end %>
  </div>
</div>
