<%= link_to 'New Sticky Note', new_sticky_note_path, class: "btn btn-primary btn-sm" %>
<br/>
<br/>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <% @sticky_notes.each do |sticky_note| %>
        <div class="col">

            <div class="card text-dark bg-warning mb-3 h-100" style="max-width: 18rem;">
                <div class="card-header"><%= sticky_note.title %></div>
                <div class="card-body">
                    <p class="card-text"><%= sticky_note.body %></p>
                </div>

                <div class="card-footer">
                    <%= link_to 'Show', sticky_note, class:"btn btn-primary btn-sm" %>
                    <%= link_to 'Edit', edit_sticky_note_path(sticky_note), class:"btn btn-primary btn-sm" %>
                    <%= link_to 'Destroy', sticky_note, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %>
                </div>
            </div>

        </div>
    <% end %>
</div>