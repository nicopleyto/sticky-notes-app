<div class="gallery-container">
<%# row row-cols-1 row-cols-md-3 g-4 %>
    <% @sticky_notes.each do |sticky_note| %>
        <div class="gallery-item">
        <%#col%>
            <%=link_to public_sticky_note_path(sticky_note), :class => "remove-underline" do%>
                <div class="card text-dark bg-warning h-100" style="max-width: 18rem;">
                    <h5 class="card-header"><%= sticky_note.title %></h5>
                    <div class="card-body">
                        <small class="card-text"><%= sticky_note.body %></small>
                    </div>
                </div>
            <%end%>


        </div>
    <% end %>
</div>
