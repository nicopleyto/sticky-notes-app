<%= form_with(model: sticky_note) do |form| %>

<% if sticky_note.errors.any? %>
  <% sticky_note.errors.each do |error| %>

    <div class="container">
      <div class="alert alert-danger alert-dismissible fade show mx-auto col-10 text-center mb-1 mt-4" role="alert">
        <%= error.full_message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>

  <% end %>
<% end %>

<div class="card text-dark bg-warning row justify-content-center mx-auto py-3" style="max-width: 18rem;">
  <br/>
  <div class="field form-group">
    <%= form.text_field :title, class:"form-control", placeholder:"Title" %>
  </div>
  <div class="field form-group">
    <%= form.text_area :body, class:"form-control", placeholder:"Body", :rows => "5"  %>
  </div>
  <br/>
  <div class="actions">
    <%= form.submit class: "btn btn-success btn-sm"%>
  </div>

  <%= link_to 'Back', sticky_notes_path, class: "btn btn-primary btn-sm"%>
</div>


<% end %>