<p id="notice"><%= notice %></p>

<table class="table table-warning table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sticky_notes.each do |sticky_note| %>
      <tr>
        <td><%= sticky_note.title %></td>
        <td><%= sticky_note.body %></td>
        <td><%= link_to 'Show', sticky_note, class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_sticky_note_path(sticky_note), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', sticky_note, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sticky Note', new_sticky_note_path, class: "btn btn-primary btn-sm" %>
